// ========== NAV ==========
#navbar.nav
  nav.nav__container
    div
      a#nav_opener.nav__link.nav__logo
        i.bx.bxs-disc.nav__icon
        span.nav__logo-name(style='font-size:1.5em') Filter Bar
      .nav__list
        .nav__items
          h3.nav__subtitle Filter
          .nav__dropdown
            a.nav__link(href='#')
              i.bx.bx-map-pin.nav__icon
              span.nav__name Country
            .nav__dropdown-collapse
              .nav__dropdown-content
                select#country-select.select.js-select2-multi.country-select(name='countries[]' multiple='multiple')

          .nav__dropdown
            a.nav__link(href='#')
              i.bx.bx-pie-chart-alt-2.nav__icon
              span.nav__name Sector
            .nav__dropdown-collapse
              .nav__dropdown-content
                select#sector-select.select.js-select2-multi.sector-select(name='sector[]' multiple='multiple')

          .nav__dropdown
            a.nav__link(href='#') 
              i.bx.bx-time.nav__icon
              span.nav__name FC Year
            .nav__dropdown-collapse
              .nav__dropdown-content
                input#myCheck(type='checkbox' onclick='includeNA()' checked='true' style='display:inline-block') 
                span Include N/A value 
                input.js-range-slider(type='text' name='FC_Year' value='')
          
          .nav__dropdown
            a.nav__link(href='#')
              i.bx.bxs-virus.nav__icon
              span.nav__name COVID-19 Specific
            .nav__dropdown-collapse
              .nav__dropdown-content
                select#covid-select.select.js-select2-multi.covid-select(name='covid[]' multiple='multiple')
          
          .nav__dropdown
